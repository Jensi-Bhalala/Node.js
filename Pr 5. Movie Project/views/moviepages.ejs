            margin: 0 !important;
            padding: 0 !important;
        }

        /* Navbar Container */
        .navbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 50px;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        /* Logo */
        .logo {
            font-size: 22px;
            font-weight: bold;
            letter-spacing: 0.5px;
        }

        .logo span {
            color: red;
            font-weight: bold;
        }

        /* Search Bar */
        .search-bar {
            flex: 1;
            margin: 0 20px;
            position: relative;
        }

        .search-bar input {
            width: 500px;
            padding: 10px 15px;
            border: 1px solid #ccc;
            border-radius: 20px;
            outline: none;
            font-size: 14px;
            background-color: #f1f1f1;
        }

        /* nav btn */
        .nav-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .nav-right a {
            text-decoration: none;
            color: #333;
            font-size: 14px;
            font-weight: 500;
            margin-right: 20px;
        }

        /* Location Dropdown */
        .location {
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
        }

        /* Sign-in Button */
        .sign-in {
            background-color: #bc0b13;
            color: white;
            padding: 8px 15px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: bold;
            font-size: 14px;
        }

        /* menu left start  */

        .menu {
            padding: 15px 0;
        }

        .menu-left ul li a,
        .menu-right ul li a {
            margin-right: 15px !important;
            color: rgb(63, 63, 63);
            font-weight: 600;
            transition: 0.4s;
        }

        .menu-left ul li a:hover,
        .menu-right ul li a:hover {
            color: #dc1822;
        }

        /* menu left end  */

        /* Movies list start  */


        .movies::-webkit-scrollbar {
            display: none;
            /* Hide scrollbar for Chrome/Safari */
        }

        .movie-card {
           
        }




        .movie-list .title h3 {
            font-weight: 600;
        }

        .movie-list .title a {
            color: #bc0b13;
        }

        .movies {
            display: flex;
            overflow-x: auto;
            scroll-snap-type: x mandatory;
            gap: 16px;
            padding: 10px 0;
            scrollbar-width: none;
            /* Hide scrollbar for Firefox */
            -ms-overflow-style: none;
            /* Hide scrollbar for IE/Edge */
        }

        .movie-card {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            position: relative;
            text-align: center;
            flex: 0 0 auto;
            margin: 0 10px;
            scroll-snap-align: start;
            width: 200px;
            /* Adjust width as needed */
        }

        .movie-card img {
            width: 100%;
            height: 320px;
            object-fit: cover;
        }

        .movie-info {
            padding: 10px;
        }

        .movie-title {
            font-size: 16px;
            font-weight: bold;
        }

        .movie-genre {
            font-size: 14px;
            color: gray;
        }

        .movie-likes,
        .movie-rating {
            font-size: 14px;
            margin-top: 5px;
        }

        .promoted {
            position: absolute;
            background: red;
            color: white;
            padding: 4px 6px;
            font-size: 12px;
            top: 10px;
            right: 10px;
            border-radius: 4px;
        }

        /* Movies list end */

        /* Hamburger Menu */
        .hamburger {
            display: none;
            font-size: 22px;
            cursor: pointer;
        }

        /* Footer start  */

        .footer {
            background-color: rgb(226, 226, 227);
            padding: 30px;
        }

        .footer .footer-line .line {
            flex: 1 1 0%;
            height: 2px;
            background: rgb(119, 119, 120);
        }

        .footer .footer-line a {
            margin: 0 20px !important;
        }

